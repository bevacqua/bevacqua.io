// promotion

.bf-header-landing
    background-image url('/img/beer/beer-1200.jpg')

.bf-book
    min-height 650px
    margin 0 20px
    padding-bottom 20px
    text-align center

.bf-book-cover
    margin-top 30px
    box-shadow 0px 0px 8px 2px rgba(#fff, 0.2)

.bf-book-description
    margin-top 25px

.bf-book-pitch
    color #444
    border-left 10px lighten(c_yellow, 25%) solid
    background-color rgba(c_dark_yellow, 0.8)
    text-shadow 0 1px 3px rgba(#fff, 0.2)
    text-align center

@media only screen and (min-width: 768px)
    .bf-book-title
        margin-top 0

    .bf-book-cover, .bf-book-description
        display inline-block
        vertical-align top

    .bf-book-cover
        margin-right 45px

    .bf-book-pitch
        text-align left

    .bf-book-description
        display inline-block
        max-width 400px

@media only screen and (min-width: 768px) and (max-width: 1223px)
    .bf-book
        position relative

    .bf-book-pitch
        position absolute
        left 0
        right 0
        bottom 0
        margin 20px auto
        max-width 720px

@media only screen and (min-width: 1224px)
    .bf-book-cover
        margin-right 60px

    .bf-book-title
        max-width 600px

    .bf-book-description
        max-width 650px

// introduction

.bf-introduction
    padding 20px
    border-top 3px solid rgba(0,0,0,0.2)
    background-color c_light_red

.bf-introduction-title
    color #fff
    font-size 2.5em
    font-weight 100
    text-shadow 0 1px 3px rgba(c_dark_red, 0.8)

    selection-background-foreground-shadow(#fff, c_dark_red, 0 1px 3px rgba(c_dark_red, 0.2))

