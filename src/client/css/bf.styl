.bf-main
    position relative

.bf-cover
    position absolute
    left 40px
    top 40px

.bf-teaser-wrapper
    background-image url('/img/house/blurred.jpg')
    background-repeat no-repeat
    background-size 100%

.bf-teaser
    float right
    max-width 550px
    margin 20px 60px
    text-shadow 0px 1px 3px rgba(0, 0, 0, 0.5)

.bf-teaser-title
    color #fff
    font-size 48px

.bf-teaser-text
    color #ddd
    font-size 22px
    font-weight 300