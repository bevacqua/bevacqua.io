.bfr-section
  padding-bottom 0

.bfr-list
  background-color lighten(c_yellow, 80%)
  margin 30px -20px 0

.bfr-item
  list-style-type none
  vertical-align top
  display inline-block
  padding 20px

  &:nth-child(odd)
    background-color lighten(c_yellow, 70%)

  &:hover
    .bfr-icon
      transform rotate(45deg)
    .bfr-integration, .bfr-aws
      transform rotate(-45deg)

.bfr-link
  vertical-align middle
  display inline-block
  font-size 18px
  margin-bottom 20px

  &:before
    vertical-align middle
    margin-right 10px

.bfr-icon
  display block
  padding 12px
  margin 0 auto 12px
  box-sizing content-box
  overflow hidden // hide overflow from sprite
  width 128px // same as the icon in :before
  border 10px solid rgba(#000, 0.1)
  border-radius 500px
  box-shadow 1px 1px 6px rgba(#000, 0.3)
  background-color c_white
  transition all 0.3s ease-in-out

// background-color fix for some icons
.bfr-knight
  background-color #211d3a
  border-color c_clouds
.bfr-apologists
  background-color #111
  border-color c_river
.bfr-lean
  background-color #2068ba
  border-color c_river
.bfr-pragmatic
  background-color #111
.bfr-12factor
  background-color #000
  border-color c_heroku
.bfr-watch-out
  background-color #25af61
.bfr-markdown
  background-color c_gray
.bfr-heroku
  background-color c_heroku
.bfr-travis
  background-color #c00
.bfr-knight,
.bfr-interlacing,
.bfr-regex,
.bfr-ioc,
.bfr-angular-di,
.bfr-es6-modules,
.bfr-promises
  border-radius 0

@media only screen and (min-width: 680px)
  .bfr-item
    width 50%

    &:nth-child(4n)
      background-color lighten(c_yellow, 70%)

    &:nth-child(4n-1)
      background-color inherit

  .bfr-link
    font-size 26px

@media only screen and (min-width: 900px)
  .bfr-reference-description
    position absolute
    bottom 0

@media only screen and (min-width: 1050px)
  .bfr-item
    width 33.33333%

    &:nth-child(4n)
      background-color inherit

    &:nth-child(odd)
      background-color lighten(c_yellow, 70%)
